<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>cars</servlet-name>
    <servlet-class>com.cars.Ajax</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>cars</servlet-name>
    <url-pattern>/cars/Ajax</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.cars.Register</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/Register</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.cars.Login</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/Error404.jsp</location>
</error-page>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>sports.jsp</welcome-file>
  </welcome-file-list>
</web-app>
